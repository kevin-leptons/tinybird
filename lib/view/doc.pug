extends _doc_layout.pug

block doc-result
    div(class='search-content')
        ul(class='list')
            each item in items
                li
                    a(href='/doc/' + item.id)
                        h2(class='header-index')= item.name
                        ul(class='list-inline')
                            li= item.modified
                        ul(class='tags')
                            each tag in item.tags
                                li= tag
        ul(class='pagination')
            if page.first > 0
                li
                    a(href= '/doc?k=' + page.keyword + '&p=' + page.first, class='left') first
            if page.prev
                li
                    a(href= '/doc?k=' + page.keyword + '&p=' + page.prev, class='left') prev

            li
                a(disabled)= page.current + '/' + page.total
                    
            if page.next
                li(class='right')
                    a(href='/doc?k=' + page.keyword + '&p=' + page.next) next
