extends _doc_layout.pug

block doc-result
    div(class='search-content')
        ul(class='list')
            each item in items
                li
                    a(href='/doc/' + item.id)
                        h2(class='header-index')= item.name
                        ul(class='list-inline')
                            li= item.modified
                        ul(class='tags')
                            each tag in item.tags
                                li= tag
